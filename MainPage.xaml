<?xml version="1.0" encoding="utf-8"?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="TDMPW_2P_EX.MainPage"
            BarBackgroundColor="#000b1d"
            BarTextColor="White"
            UnselectedTabColor="White"
            SelectedTabColor="#36c4d1">
    <!-- Colores
        Blanco: #ffffff
        Azul Fuerte: #000b1d 
        Azul Medio: #062553
        Azul Claro: #448bf7
        Azul Pastel: #36c4d1
        Gris: #f4f5f7
        Cambiar NavigationPage, Page -->
    <!-- PÁGINA PELÍCULAS -->
    <ContentPage Title="Películas"
                 IconImageSource="action.png"
                 BackgroundColor="White">
        <ScrollView>
            <VerticalStackLayout>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="250" />
                        <RowDefinition Height="250" />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <!-- Header -->
                    <BoxView Grid.Row="0"
                             Grid.ColumnSpan="2"
                             Color="#000b1d"
                             HorizontalOptions="Fill"
                             VerticalOptions="Fill" />
                    <HorizontalStackLayout Grid.Row="0"
                                           Grid.ColumnSpan="2">
                        <Label Text="Cartelera"
                               TextColor="White"
                               FontAttributes="Bold"
                               FontFamily="Marine"
                               FontSize="35"
                               Style="{StaticResource Headline}"
                               SemanticProperties.HeadingLevel="Level1"
                               HorizontalOptions="Start"
                               VerticalOptions="Center"
                               Margin="40,10,0,5" />
                        <Image Source="flecha.png"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               HeightRequest="20"
                               Margin="10,0,250,10" />
                        <Image Source="menu.png"
                               HorizontalOptions="End"
                               VerticalOptions="Start"
                               HeightRequest="40"
                               Margin="230,10,20,10" />
                    </HorizontalStackLayout>
                    <!-- Carrusel Imagénes -->
                    <CarouselView Grid.Row="1"
                                  Grid.ColumnSpan="2"
                                  x:Name="carouselView"
                                  PeekAreaInsets="20"
                                  Margin="10"
                                  IndicatorView="indicatorView"
                                  HeightRequest="400"
                                  HorizontalOptions="Center"
                                  VerticalOptions="Center">
                        <CarouselView.ItemsSource>
                            <x:Array Type="{x:Type ImageSource}">
                                <FileImageSource File="imagen6.jpg" />
                                <FileImageSource File="imagen8.jpg" />
                                <FileImageSource File="imagen9.jpg" />
                                <FileImageSource File="imagen10.jpg" />
                            </x:Array>
                        </CarouselView.ItemsSource>
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Frame Margin="30,0,30,0"
                                       BorderColor="White"
                                       CornerRadius="85"
                                       BackgroundColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       IsClippedToBounds="True"
                                       HeightRequest="400">
                                    <Image Source="{Binding .}"
                                           Aspect="Fill"
                                           Margin="-20"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Start"
                                           HeightRequest="400" />
                                </Frame>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                    <IndicatorView x:Name="indicatorView"
                                   Grid.Row="1"
                                   Grid.ColumnSpan="2"
                                   Margin="0, 0, 0, 20"
                                   IndicatorColor="#36c4d1"
                                   SelectedIndicatorColor="#448bf7"
                                   HorizontalOptions="Center"
                                   VerticalOptions="End" />
                    <!-- Label Separador -->
                    <BoxView Grid.Row="2"
                             Grid.ColumnSpan="2"
                             Color="#448bf7"
                             CornerRadius="50"
                             HorizontalOptions="Fill"
                             VerticalOptions="Fill"
                             Margin="50,5" />
                    <HorizontalStackLayout Grid.Row="2"
                                           Grid.ColumnSpan="2"
                                           HorizontalOptions="Fill">
                        <Label Text="Todos los cines"
                               TextColor="White"
                               FontAttributes="Bold"
                               FontFamily="Heavy"
                               FontSize="20"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Margin="300,10,50,10" />
                        <Image Source="flecha.png"
                               HorizontalOptions="End"
                               VerticalOptions="Center"
                               HeightRequest="20"
                               Margin="150,10,50,10" />
                    </HorizontalStackLayout>
                    <!-- Galería de Imágenes 1 -->
                    <Frame Grid.Row="3"
                           Grid.RowSpan="2"
                           Grid.Column="0"
                           Margin="10,0,0,0"
                           BorderColor="White"
                           CornerRadius="100"
                           BackgroundColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           IsClippedToBounds="True">
                        <Image Source="imagen1.jpg"
                               Aspect="Fill"
                               HorizontalOptions="Start"
                               VerticalOptions="Start" />
                    </Frame>
                    <Frame Grid.Row="3"
                           Grid.Column="1"
                           BorderColor="White"
                           CornerRadius="40"
                           BackgroundColor="White"
                           Margin="10"
                           HeightRequest="225"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           IsClippedToBounds="True">
                        <Image Source="imagen5.png"
                               Aspect="Fill"
                               HorizontalOptions="Start"
                               VerticalOptions="Start"
                               Margin="-20" />
                    </Frame>
                    <Frame Grid.Row="4"
                           Grid.Column="1"
                           BorderColor="White"
                           CornerRadius="40"
                           BackgroundColor="White"
                           HeightRequest="225"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           IsClippedToBounds="True"
                           Margin="10">
                        <Image Source="imagen7.jpg"
                               Aspect="Fill"
                               HorizontalOptions="Start"
                               VerticalOptions="Start"
                               Margin="-20" />
                    </Frame>
                    <!-- Galería de Imágenes 2 -->
                    <HorizontalStackLayout Grid.Row="5"
                                           Grid.ColumnSpan="2"
                                           HorizontalOptions="Fill">
                        <Frame Margin="5,5,3,40"
                               BorderColor="White"
                               CornerRadius="40"
                               BackgroundColor="White"
                               HeightRequest="350"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               IsClippedToBounds="True">
                            <Image Source="imagen2.jpg"
                                   Aspect="Fill"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Start"
                                   Margin="-20" />
                        </Frame>
                        <Frame Margin="5,5,5,40"
                               BorderColor="White"
                               CornerRadius="40"
                               BackgroundColor="White"
                               HeightRequest="350"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               IsClippedToBounds="True">
                            <Image Source="imagen3.jpg"
                                   Aspect="Fill"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Start"
                                   Margin="-20" />
                        </Frame>
                        <Frame Margin="3,5,3,40"
                               BorderColor="White"
                               CornerRadius="45"
                               BackgroundColor="White"
                               HeightRequest="350"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               IsClippedToBounds="True">
                            <Image Source="imagen4.jpg"
                                   Aspect="Fill"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Start"
                                   Margin="-20" />
                        </Frame>
                    </HorizontalStackLayout>
                    <!-- Footer -->
                    <BoxView Grid.Row="6"
                             Grid.ColumnSpan="2"
                             Color="#000b1d"
                             HeightRequest="50"
                             HorizontalOptions="Fill"
                             VerticalOptions="Fill" />
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage>
    <!-- PÁGINA ALIMENTOS -->
