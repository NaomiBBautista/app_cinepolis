    <!-- PÁGINA PERFIL -->
    <ContentPage Title="Perfil"
                 IconImageSource="usuario.png"
                 BackgroundColor="White">
        <ScrollView>
            <VerticalStackLayout>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="2*" />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="2*" />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <!-- Header -->
                    <BoxView Grid.Row="0"
                             Grid.ColumnSpan="3"
                             Color="#000b1d"
                             HorizontalOptions="Fill"
                             VerticalOptions="Fill" />
                    <HorizontalStackLayout Grid.Row="0"
                                           Grid.ColumnSpan="3">
                        <Image Source="izquierda.png"
                               HorizontalOptions="Start"
                               VerticalOptions="Center"
                               HeightRequest="40"
                               Margin="20,10,70,10" />
                        <Label Text="Personalización"
                               TextColor="White"
                               FontAttributes="Bold"
                               FontFamily="Marine"
                               FontSize="35"
                               Style="{StaticResource Headline}"
                               SemanticProperties.HeadingLevel="Level1"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Margin="100,10" />
                    </HorizontalStackLayout>
                    <!-- Imágen Principal -->
                    <Frame Grid.Row="1"
                           Grid.ColumnSpan="3"
                           Margin="10"
                           BorderColor="#f4f5f7"
                           CornerRadius="50"
                           BackgroundColor="#f4f5f7"
                           HeightRequest="400"
                           WidthRequest="700"
                           HorizontalOptions="Center"
                           VerticalOptions="Start"
                           IsClippedToBounds="True">
                        <Image x:Name="imgPrincipal"
                               Source="palomitas.png"
                               Aspect="Fill"
                               Margin="-10"
                               HeightRequest="400"
                               WidthRequest="400"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Frame>
                    <!-- Detalles del Combo -->
                    <Label Grid.Row="2"
                           Grid.Column="0"
                           x:Name="tituloPrincipal"
                           Text="Combo Tradicional"
                           TextColor="#000b1d"
                           FontAttributes="Bold"
                           FontFamily="Heavy"
                           FontSize="30"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"
                           Margin="40,10,10,0"
                           WidthRequest="400" />
                    <Label Grid.Row="2"
                           Grid.Column="1"
                           Grid.ColumnSpan="2"
                           x:Name="precioPrincipal"
                           Text="$ 90.00"
                           TextColor="#000b1d"
                           FontAttributes="Bold"
                           FontFamily="Heavy"
                           FontSize="30"
                           HorizontalOptions="End"
                           VerticalOptions="Center"
                           Margin="10,10,40,0"
                           WidthRequest="150" />
                    <Label Grid.Row="3"
                           Grid.ColumnSpan="3"
                           x:Name="desPrincipal"
                           Text="Tu combo personalizado incluye Palomitas Jumbo para llevar (285 gr) [$90.00 c/u]."
                           TextColor="#000b1d"
                           FontFamily="Nexa"
                           FontSize="15"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"
                           Margin="40,5,40,10"
                           WidthRequest="650"
                           HeightRequest="80" />
                    <!-- Cantidad -->
                    <Label Grid.Row="4"
                           Grid.Column="0"
                           Text="Cantidad"
                           TextColor="#000b1d"
                           FontAttributes="Bold"
                           FontFamily="Heavy"
                           FontSize="25"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"
                           Margin="40,10,10,10"
                           WidthRequest="200" />
                    <BoxView Grid.Row="4"
                             Grid.Column="1"
                             Color="#448bf7"
                             CornerRadius="5"
                             HeightRequest="35"
                             WidthRequest="66"
                             HorizontalOptions="End"
                             VerticalOptions="Center"
                             Margin="40,10,0,10" />
                    <Stepper Grid.Row="4"
                             Grid.Column="1"
                             x:Name="stpCantidad"
                             Minimum="1"
                             Maximum="5"
                             Increment="1"
                             ValueChanged="OnCantidad"
                             Background="#448bf7"
                             BackgroundColor="#448bf7"
                             Margin="40,10,0,10"
                             HorizontalOptions="End"
                             VerticalOptions="Center" />
                    <Label Grid.Row="4"
                           Grid.Column="2"
                           Text="1"
                           x:Name="numCantidad"
                           FontFamily="Heavy"
                           FontSize="25"
                           TextColor="#448bf7"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Margin="-10,10,60,10"
                           WidthRequest="20" />
                    <!-- Cambiar Combo Personalizado -->
                    <VerticalStackLayout Grid.Row="5"
                                         Grid.ColumnSpan="3">
                        <!-- Agregar Palomitas -->
                        <Frame BorderColor="#000b1d"
                               CornerRadius="35"
                               BackgroundColor="White"
                               Margin="40,5,60,10"
                               WidthRequest="630"
                               HeightRequest="100"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               IsClippedToBounds="True">
                            <HorizontalStackLayout>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="400" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Row="0"
                                           Grid.Column="0"
                                           Source="palomitasmaiz.png"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Center"
                                           HeightRequest="40"
                                           Margin="10" />
