                               BackgroundColor="#f4f5f7"
                               HeightRequest="200"
                               WidthRequest="200"
                               HorizontalOptions="Center"
                               VerticalOptions="Start"
                               IsClippedToBounds="True">
                            <Image x:Name="imgCombo3"
                                   Source="combo3.png"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   HeightRequest="180"
                                   WidthRequest="180"
                                   Margin="-10" />
                        </Frame>
                        <Label x:Name="lblCombo3"
                               Text="Individual"
